// Prisma schema for AI Cosmetics Inventory Assistant
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id                Int       @id @default(autoincrement())
  sku               String    @unique
  name              String
  brand             String
  category          String
  supplier          String
  stock             Int
  stock_in_transit  Int?
  sales_last_7      Int
  sales_last_30     Int
  last_restock_date DateTime?
  cost_price        Float
  sale_price        Float
  margin            Float?
  threshold         Int
  is_strategic      Boolean

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
